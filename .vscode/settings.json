{
  // ğŸš€ ConfiguraÃ§Ãµes de formataÃ§Ã£o e salvamento automÃ¡tico
  //   "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": false,

  // ğŸ Python
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": false,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.useLibraryCodeForTypes": true,

  // ğŸ§  Pylance (Melhor intellisense)
  "python.languageServer": "Pylance",

  // ğŸŒ Django Templates (Emmet funcionando)
  "emmet.includeLanguages": {
    "django-html": "html"
  },

  // ğŸ’… Prettier (HTML, CSS, JS, JSON)
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.semi": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ğŸ” Error Lens (Erros visÃ­veis no cÃ³digo)
  "errorLens.enabled": true,
  "errorLens.fontWeight": "bold",
  "errorLens.followCursor": "closestProblem",
  "errorLens.gutterIconsEnabled": true,

  // ğŸŒˆ Outras melhorias visuais
  "bracketPairColorizer.depreciation-notice": false,
  "editor.guides.bracketPairs": true
}
